{{>partials/header}}
{{>partials/navbar}}

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Novo artigo</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/articles/save">
                <input type="text" name="title" placeholder="Defina o tÃ­tulo do artigo" class="form-control" /><br>
                <label for="category">Categoria</label>
                <select name="category" id="category" class="form-control">
                    {{ #categories }}
                    <option value="{{ id }}">{{ title }}</option>
                    {{ /categories }}
                </select><br>
                <textarea name="body" class="form-control" placeholder="Escreva o artigo aqui"
                    id="article"></textarea><br>
                <button class="btn btn-success">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

{{>partials/footer}}

<script src="/tinymce/tinymce.min.js"></script>

<script>
    tinymce.init({
        language: 'pt_BR',
        selector: '#article',
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    });
</script>